@using System.Collections;
@using Newtonsoft.Json;
@model List<CloudVOffice.Core.Domain.Projects.Project>;
@{
	Layout = "_MainAppLayout";

}
@addTagHelper *, Syncfusion.EJ2
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<header class="main-heading">
	<div class="container-fluid">
		<div class="row">
			<div class="col-xl-8 col-lg-8 col-md-8 col-sm-8">
				<div class="page-icon">
					<i class="icon-laptop_windows"></i>
				</div>
				<div class="page-title">
					<h5>My Assigned Projects</h5>
				</div>
			</div>
			<div class="col-xl-4 col-lg-4 col-md-4 col-sm-4">
				<div class="right-actions">
					<span class="last-login">Last Login: 2 hours ago</span>
				</div>
			</div>
		</div>
	</div>
</header>


<div class="main-content">
	<div class="row gutters">
	
		
			
                   
                                @foreach (var item in Model)
                                {
                                    <div class="col-xs-12 col-sm-4 col-lg-4 col-md-4">
                                        <!-- Basic Card Layout  -->
                                        <div tabindex="0" class="e-card" id="basic_card">
                                            <div class="e-card-header">
                                                <div class="e-card-header-caption">
                                                <div class="e-card-header-title"> <b>@item.ProjectName</b></div>
                                                <div class="e-card-sub-title"> <b>Manager</b> @item.Employee.FullName | @item.StartDate.Value.Date.ToString("dd-MMM-yyyy") - @item.EndDate.Value.Date.ToString("dd-MMM-yyyy") </div>
                                                </div>
                                            </div>
                                            <div class="e-card-content">
                                               @item.ProjectNotes
                                            </div>
                                            <div class="e-card-actions">
                                                <a href="~/Projects/Task/Tasks?ProjectId=@item.ProjectId" class="e-btn e-outline e-primary">
                                                    View Tasks
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                }
                           
                          
				
			
	</div>
</div>

