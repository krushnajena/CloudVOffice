@{
    Layout = "_MainAppLayout";
    ViewData["Title"] = "Desktop Monitoring DashBoard";
    var Session = new String[] { "#27ba47", "#f76552" };
    var Activity = new String[] { "#81f041" };
    var Web = new String[] { "#5cfadd" };
}
@addTagHelper *, Syncfusion.EJ2
<header class="main-heading">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-8 col-lg-8 col-md-8 col-sm-8">
                <div class="page-icon">
                    <i class="icon-laptop_windows"></i>
                </div>
                <div class="page-title">
                    <h5>EMPLOYEE</h5>
                    <h6 class="sub-heading">
                    </h6>
                </div>
            </div>
            <div class="col-xl-4 col-lg-4 col-md-4 col-sm-4">
                <div class="right-actions">
                    <span class="last-login">  </span>
                </div>
            </div>
        </div>
    </div>
</header>


<div class="main-content">

    <div class="row gutters">
        <div class="col-xl-3 col-lg-3 col-md-3 col-sm-6 col">
            <a href="#" class="block-140">
                <div class="icon primary">
                    <i class="icon-users"></i>
                </div>
                <h5>@ViewBag.loginTime</h5>
                <p>Loged In On</p>
            </a>

        </div>


        <div class="col-xl-3 col-lg-3 col-md-3 col-sm-6 col">
            <a href="#" class="block-140">
                <div class="icon primary">
                    <i class="icon-users"></i>
                </div>
                <h5>@ViewBag.toalDuration</h5>
                <p>Total Duration</p>
            </a>

        </div>


        <div class="col-xl-3 col-lg-2 col-md-3 col-sm-6 col">
            <a href="#" class="block-140">
                <div class="icon primary">
                    <i class="icon-users"></i>
                </div>
                <h5>@ViewBag.idelDuration</h5>
                <p>Idel Duration</p>
            </a>

        </div>


        <div class="col-xl-3 col-lg-3 col-md-3 col-sm-6 col">
            <a href="#" class="block-140">
                <div class="icon primary">
                    <i class="icon-users"></i>
                </div>
                <h5>@ViewBag.unProuctiveHour</h5>
                <p>Un Prouctive Hour</p>
            </a>

        </div>

    </div>


    <div class="row gutters">

        <div class="col-xl-4 col-lg-4 col-md-5 col-sm-12">
            <div class="card">
                <div class="card-header">Session Details</div>
                <div class="card-body">
                    <ejs-accumulationchart style="height: 100%; width: 100%" id="pie" enableAnimation="true" enableBorderOnMouseMove="false" enableSmartLabels="true" width="100%" height="100%">
                        <e-accumulationchart-tooltipsettings enable="true"></e-accumulationchart-tooltipsettings>
                        <e-accumulationchart-legendsettings visible="false">
                        </e-accumulationchart-legendsettings>
                        <e-accumulation-series-collection>
                            <e-accumulation-series tooltipMappingName="Product" dataSource="ViewBag.WorkDurrationPie" xName="Key" yName="Value" innerRadius="40%"
                                                   palettes="ViewBag.palettes">
                                <e-accumulationseries-datalabel name="text" visible="true" position="@Syncfusion.EJ2.Charts.AccumulationLabelPosition.Outside">
                                    <e-connectorstyle length="10px" type="@Syncfusion.EJ2.Charts.ConnectorType.Curve"></e-connectorstyle>
                                </e-accumulationseries-datalabel>
                                <e-accumulationseries-border width="3"></e-accumulationseries-border>
                            </e-accumulation-series>
                        </e-accumulation-series-collection>
                    </ejs-accumulationchart>
                </div>
            </div>
        </div>



        <div class="col-xl-8 col-lg-8 col-md-5 col-sm-12">
            <div class="card">
                <div class="card-header">Session Details</div>
                <div class="card-body">

                    <ejs-chart id="monthcontainer" title="Session Deatils" palettes="Session">
                        <e-chart-tooltipsettings enable="true">
                        </e-chart-tooltipsettings>
                        <e-chart-primaryxaxis valueType="@Syncfusion.EJ2.Charts.ValueType.Category"
                                              edgeLabelPlacement="@Syncfusion.EJ2.Charts.EdgeLabelPlacement.Shift">
                            <e-majorgridlines width="0"></e-majorgridlines>
                        </e-chart-primaryxaxis>
                        <e-chart-primaryyaxis title="In Hours"
                                              minimum="0"
                                              maximum="15"
                                              interval="1.5">
                            <e-linestyle width="0"></e-linestyle>
                            <e-majorticklines width="0"></e-majorticklines>
                        </e-chart-primaryyaxis>
                        <e-chart-chartarea>
                            <e-chartarea-border width="0"></e-chartarea-border>
                        </e-chart-chartarea>
                        <e-chart-legendsettings enableHighlight="true">
                        </e-chart-legendsettings>
                        <e-series-collection>
                            <e-series dataSource="ViewBag.SessionLineChart" name="Log In Hours" xName="Xvalue" width="2" opacity="1" yName="YValue1" type="@Syncfusion.EJ2.Charts.ChartSeriesType.Line">
                                <e-series-marker visible="true" height="7" width="7" shape="@Syncfusion.EJ2.Charts.ChartShape.Circle" isFilled="true"></e-series-marker>
                            </e-series>
                            <e-series dataSource="ViewBag.SessionLineChart" name="Idel Hours" xName="Xvalue" width="2" opacity="1" yName="yValue2" type="@Syncfusion.EJ2.Charts.ChartSeriesType.Line">
                                <e-series-marker visible="true" height="6" width="6" shape="@Syncfusion.EJ2.Charts.ChartShape.Triangle" isFilled="true"></e-series-marker>
                            </e-series>


                        </e-series-collection>
                    </ejs-chart>
                </div>
            </div>
        </div>
    </div>


    <div class="row gutters">



        <div class="col-xl-12 col-lg-12 col-md-5 col-sm-12">
            <div class="card">
                <div class="card-header">Activity Details (This Month)</div>
                <div class="card-body">

                    <ejs-chart id="lineContainer" title="Activity" palettes="Activity">
                        <e-chart-tooltipsettings enable="true" shared="true" header="<b>${point.tooltip}</b>">
                        </e-chart-tooltipsettings>
                        <e-chart-legendsettings visible="true" enableHighlight="true">
                        </e-chart-legendsettings>
                        <e-chart-primaryxaxis valueType="@Syncfusion.EJ2.Charts.ValueType.Category" interval="1">
                            <e-majorgridlines width="0"></e-majorgridlines>
                            <e-majorticklines width="0"></e-majorticklines>
                        </e-chart-primaryxaxis>
                        <e-chart-primaryyaxis title="Hours" maximum="150" interval="20">
                            <e-majorticklines width="0"></e-majorticklines>
                            <e-linestyle width="0"></e-linestyle>
                        </e-chart-primaryyaxis>
                        <e-chart-chartarea>
                            <e-chartarea-border width="0"></e-chartarea-border>
                        </e-chart-chartarea>
                        <e-series-collection>
                            <e-series dataSource="ViewBag.ActivityColumnChart" xName="ProcessOrUrl" yName="Duration" tooltipMappingName="ProcessOrUrl" name="Applications" columnSpacing="0.1" type="@Syncfusion.EJ2.Charts.ChartSeriesType.Column">
                            </e-series>

                        </e-series-collection>
                    </ejs-chart>
                </div>
            </div>
        </div>
    </div>




    <div class="row gutters">



        <div class="col-xl-12 col-lg-12 col-md-5 col-sm-12">
            <div class="card">
                <div class="card-header">Web Activity Details (This Month)</div>
                <div class="card-body">

                    <ejs-chart id="weblineContainer" title="Web Activity" palettes="Web">
                        <e-chart-tooltipsettings enable="true" shared="true" header="<b>${point.tooltip}</b>">
                        </e-chart-tooltipsettings>
                        <e-chart-legendsettings visible="true" enableHighlight="true">
                        </e-chart-legendsettings>
                        <e-chart-primaryxaxis valueType="@Syncfusion.EJ2.Charts.ValueType.Category" interval="1">
                            <e-majorgridlines width="0"></e-majorgridlines>
                            <e-majorticklines width="0"></e-majorticklines>
                        </e-chart-primaryxaxis>
                        <e-chart-primaryyaxis title="Hours" maximum="150" interval="20">
                            <e-majorticklines width="0"></e-majorticklines>
                            <e-linestyle width="0"></e-linestyle>
                        </e-chart-primaryyaxis>
                        <e-chart-chartarea>
                            <e-chartarea-border width="0"></e-chartarea-border>
                        </e-chart-chartarea>
                        <e-series-collection>
                            <e-series dataSource="ViewBag.WebColumnChart" xName="AppOrWebPageName" yName="Duration" tooltipMappingName="AppOrWebPageName" name="Websites" columnSpacing="0.1" type="@Syncfusion.EJ2.Charts.ChartSeriesType.Column">
                            </e-series>

                        </e-series-collection>
                    </ejs-chart>
                </div>
            </div>
        </div>
    </div>
</div>