@using System.Collections;
@using Newtonsoft.Json;

@{
    Layout = "_MainAppLayout";
    ViewData["Title"] = "Task";

}
@addTagHelper *, Syncfusion.EJ2
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<header class="main-heading">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-8 col-lg-8 col-md-8 col-sm-8">
                <div class="page-icon">
                    <i class="icon-laptop_windows"></i>
                </div>
                <div class="page-title">
                    <h5>Tasks</h5>
                </div>
            </div>
            <div class="col-xl-4 col-lg-4 col-md-4 col-sm-4">
                <div class="right-actions">
                    <span class="last-login">  </span>
                </div>
            </div>
        </div>
    </div>
</header>


<div class="main-content">
    <div class="row gutters">
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12">
            <div class="card">
                <div class="card-header">Task</div>
                <div class="card-body">

                    <ejs-treegrid id="TreeGrid" dataSource="ViewBag.report" height="380" childMapping="Employees" treeColumnIndex="1">
                        <e-treegrid-columns>
                            <e-treegrid-column field="ProjectCode" headerText="Project Code" textAlign="Right" width="95"></e-treegrid-column>
                            <e-treegrid-column field="ProjectName" headerText="Project Name" width="220"></e-treegrid-column>
                            <e-treegrid-column field="Open" headerText="Open" textAlign="Right" width="115"></e-treegrid-column>
                            <e-treegrid-column field="Working" headerText="Working" textAlign="Right" width="115"></e-treegrid-column>
                            <e-treegrid-column field="PendingReview" headerText="PendingReview" textAlign="Right" width="100"></e-treegrid-column>
                            <e-treegrid-column field="Overdue" headerText="Overdue" textAlign="Right" width="105"></e-treegrid-column>
                            <e-treegrid-column field="Completed" headerText="Completed" width="100"></e-treegrid-column>

                            <e-treegrid-column field="Canceled" headerText="Canceled" width="100"></e-treegrid-column>
                        </e-treegrid-columns>
                    </ejs-treegrid>
                </div>
            </div>
        </div>
    </div>

</div>



