@model CloudVOffice.Data.DTO.Custom.CustomerGroupDTO;
@{
	Layout = "_MainAppLayout";
}
@addTagHelper *, Syncfusion.EJ2
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<header class="main-heading">
	<div class="container-fluid">
		<div class="row">
			<div class="col-xl-8 col-lg-8 col-md-8 col-sm-8">
				<div class="page-icon">
					<i class="icon-laptop_windows"></i>
				</div>
				<div class="page-title">
					<h5>Customer Group</h5>
					
				</div>
			</div>
			<div class="col-xl-4 col-lg-4 col-md-4 col-sm-4">
				<div class="right-actions">
					<span class="last-login">Last Login: 2 hours ago</span>
				</div>
			</div>
		</div>
	</div>
</header>
<div class="main-content">
	<div class="row gutters">
		<div class="col-xl-12 col-lg-12 col-md-12 col-sm-12">

			<div class="card">
				<form asp-route="Accounts/CustomerGroup/CustomerGroupCreate" method="post" autocomplete="off">
					<div asp-validation-summary="ModelOnly" class="message-error"></div>


					<div class="card-header"><b> Customer Group</b></div>
					<div class="card-body">
						<div class="form-row">
							<div class="form-group col-md-5">
								<input asp-for="@Model.CustomerGroupId" type="hidden" />

								<label for="CustomerGroupName" class="form-label">Customer Group Name</label>
								<input asp-for="@Model.CustomerGroupName" type="text" class="form-control" autofocus="autofocus" placeholder="Customer Group Name" />
								<span asp-validation-for="CustomerGroupName"></span>
							</div>
						</div>
					</div>



					<div class="card-body">

						<div class="col-lg-2 col-md-2 col-sm-12">
							<button type="submit" class="btn btn-primary">Save</button>
						</div>
					</div>

				</form>

			</div>



		</div>
	</div>

</div>


