@model CloudVOffice.Data.DTO.Recruitment.JobOpeningDTO;
@{
    Layout = "_MainAppLayout";
    ViewData["Title"] = "JobOpening";

    var employee = new SelectList((IEnumerable)ViewBag.Employee, "EmployeeId", "FullName");
    var recruitClientContact = new SelectList((IEnumerable)ViewBag.RecruitClientContact, "RecruitClientContactId", "ContactName");
    var recruitClient = new SelectList((IEnumerable)ViewBag.RecruitClient, "RecruitClientId", "ClientName");
}
@addTagHelper *, Syncfusion.EJ2
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@using System.Collections;
@using Newtonsoft.Json;
<header class="main-heading">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-8 col-lg-8 col-md-8 col-sm-8">
                <div class="page-icon">
                    <i class="icon-laptop_windows"></i>
                </div>
                <div class="page-title">
                    <h5>Job Opening</h5>

                </div>
            </div>
            <div class="col-xl-4 col-lg-4 col-md-4 col-sm-4">
                <div class="right-actions">
                    <span class="last-login"></span>
                </div>
            </div>
        </div>
    </div>
</header>


<div class="main-content">
    <div class="row gutters">
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12">

            <div class="card">
                <form asp-route="Recruitment/JobOpening/JobOpeningCreate" method="post" autocomplete="off">
                    <div asp-
                         ation-summary="ModelOnly" class="message-error"></div>


                    <div class="card-header"><b>Job Opening</b></div>
                    <div class="card-body">
                        <div class="form-row">
                            <div class="form-group col-md-3">
                                <label for="JobOpType" class="form-label">JobOpType</label>
                                <select input asp-for="@Model.JobOpType" type="text" class="form-control" autofocus="autofocus" placeholder="JobOpType">
                                    <option value="1">OffSore</option>
                                    <option value="2">Onsore</option>

                                </select>
                            </div>
                            <div class="form-group col-md-3">



                                <label for="RecruitClientId" class="form-label">Client</label>
                                <ejs-dropdownlist id="ClientID" allowFiltering="true" ejs-for="@Model.ClientID" filtering="onRecruitClientfiltering" dataSource="@(new SelectList((IEnumerable)ViewBag.RecruitClient, "RecruitClientId", "ClientName").Items)" placeholder="Select ClientID" popupHeight="220px">
                                    <e-dropdownlist-fields text="ClientName" value="RecruitClientId"></e-dropdownlist-fields>
                                </ejs-dropdownlist>
                                <span asp-validation-for="ClientID"></span>

                            </div>

                            <div class="form-group col-md-3">



                                <label for="ContactName" class="form-label">Contact</label>
                                <ejs-dropdownlist id="ContactId" allowFiltering="true" ejs-for="@Model.ContactId" filtering="onRecruitClientContactfiltering" dataSource="@(new SelectList((IEnumerable)ViewBag.RecruitClientContact, "RecruitClientContactId", "ContactName").Items)" placeholder="Select RecruitClientContact" popupHeight="220px">
                                    <e-dropdownlist-fields text="ContactName" value="RecruitClientContactId"></e-dropdownlist-fields>
                                </ejs-dropdownlist>
                                <span asp-validation-for="ContactId"></span>

                            </div>
                        </div>

                        <div class="form-row">


                            <div class="form-group col-md-3">

                                <label for="EmployeeId" class="form-label">Hiring Manager</label>
                                <ejs-dropdownlist id="HiringManagerId" allowFiltering="true" ejs-for="@Model.HiringManagerId" filtering="onEmployeefiltering" dataSource="@(new SelectList((IEnumerable)ViewBag.Employee, "EmployeeId", "FullName").Items)" placeholder="Select HiringManager Id" popupHeight="220px">
                                    <e-dropdownlist-fields text="FullName" value="EmployeeId"></e-dropdownlist-fields>
                                </ejs-dropdownlist>

                                <span asp-validation-for="HiringManagerId"></span>
                            </div>
                            <div class="form-group col-md-3">



                                <label for="JobTitle" class="form-label">JobTitle&nbsp;<span style="color:red;"><b>*</b></span></label>
                                <input asp-for="@Model.JobTitle" type="text" class="form-control" autofocus="autofocus" placeholder="JobTitle" />
                                <span as-validation-for="JobTitle"></span>

                            </div>

                            <div class="form-group col-md-3">



                                <label for="DateOpened" class="form-label">DateOpened&nbsp;<span style="color:red;"><b>*</b></span></label>
                                <input asp-for="@Model.DateOpened" type="date" class="form-control" autofocus="autofocus" placeholder="DateOpened" />
                                <span as-validation-for="DateOpened"></span>

                            </div>

                        </div>


                        <div class="form-row">

                            <div class="form-group col-md-3">
                                <label for="TargetDate" class="form-label">Target Date</label>
                                <input asp-for="@Model.TargetDate" type="date" class="form-control" autofocus="autofocus" placeholder="Target Date" />
                                <span asp-validation-for="TargetDate"></span>
                            </div>

                            <div class="form-group col-md-3">
                                <label for="JobType" class="form-label">JobType</label>
                                <select input asp-for="@Model.JobType" type="text" class="form-control" autofocus="autofocus" placeholder="JobOpType">
                                    <option value="None">None</option>
                                    <option value="Full time">Full time</option>
                                    <option value="Part time">Part time</option>
                                    <option value="Any">Any</option>
                                    <option value="Permanent">Permanent</option>
                                    <option value="Contract">Contract</option>
                                    <option value="Temporary">Temporary</option>
                                    <option value="Training">Training</option>
                                    <option value="Volunteer">Volunteer</option>
                                    <option value="Seasonal">Sessonsl</option>
                                    <option value="Freelance">Freelance</option>


                                </select>
                            </div>
                            <div class="form-group col-md-3">
                                <label for="WorkExperience" class="form-label">WorkExperience</label>
                                <select input asp-for="@Model.WorkExperience" type="text" class="form-control" autofocus="autofocus" placeholder="WorkExperience">
                                    <option value="Fresher">Fresher</option>
                                    <option value="0-1 year">0-1 year</option>
                                    <option value="1-3 years">1-3 years</option>
                                    <option value="4-5 years">4-5 years</option>
                                    <option value="5+ years">5+ years</option>




                                </select>


                            </div>

                            <div class="form-group col-md-3">
                                <label for="City" class="form-label">City</label>
                                <input asp-for="@Model.City" type="text" class="form-control" autofocus="autofocus" placeholder="City" />
                                <span asp-validation-for="City"></span>
                            </div>

                        </div>

                        <div class="form-row">
                            <div class="form-group col-md-3">
                                <label for="RevenuePerPosition" class="form-label">RevenuePerPosition</label>
                                <input asp-for="@Model.RevenuePerPosition" type="text" class="form-control" autofocus="autofocus" placeholder="RevenuePerPosition" id="RevenuePerPosition" />
                                <span asp-validation-for="RevenuePerPosition"></span>
                            </div>

                            <div class="form-group col-md-3">
                                <label for="NumberofPositions" class="form-label">NumberofPositions</label>
                                <input asp-for="@Model.NumberofPositions" type="text" class="form-control" autofocus="autofocus" placeholder="NumberofPositions" id="NumberofPositions" />
                                <span asp-validation-for="NumberofPositions"></span>
                            </div>
                        </div>
                        <div class="form-row">



                            <div class="form-group col-md-3">
                                <label for="ExpectedRevenue" class="form-label">ExpectedRevenue</label>
                                <input asp-for="@Model.ExpectedRevenue" type="text" class="form-control" autofocus="autofocus" placeholder="ExpectedRevenue" />
                                <span asp-validation-for="ExpectedRevenue"></span>
                            </div>


                            <div class="form-group col-md-3">
                                <label for="ActualRevenue" class="form-label">ActualRevenue</label>
                                <input asp-for="@Model.ActualRevenue" type="text" class="form-control" autofocus="autofocus" placeholder="ActualRevenue" />
                                <span asp-validation-for="ActualRevenue"></span>
                            </div>



                        </div>

                        <div class="form-row">

                            <div class="form-group col-md-3">
                                <label for="Status" class="form-label">Status</label>
                                <input asp-for="@Model.Status" type="text" class="form-control" autofocus="autofocus" placeholder="Status" />
                                <span asp-validation-for="Status"></span>
                            </div>

                            <div class="form-group col-md-4">
                                <label for="JobDescription" class="form-label">JobDescription&nbsp;<span style="color:red;"><b>*</b></span></label>
                                <textarea asp-for="@Model.JobDescription" type="text" class="input-with-feedback form-control" data-fieldtype="Small Text" autofocus="autofocus" placeholder="JobDescription" style="height: 150px;"></textarea>
                                <span asp-validation-for="JobDescription"></span>
                            </div>




                        </div>

                        <div class="form-row">

                            <div class="form-group col-md-4">
                                <label for="Benefits" class="form-label">Benefits&nbsp;<span style="color:red;"><b>*</b></span></label>
                                <textarea asp-for="@Model.Benefits" type="text" class="input-with-feedback form-control" data-fieldtype="Small Text" autofocus="autofocus" placeholder="Benefits" style="height: 150px;"></textarea>
                                <span asp-validation-for="Benefits"></span>
                            </div>
                            <div class="form-group col-md-4">
                                <label for="PublishOnWebsite" class="form-label">PublishOnWebsite&nbsp;<span style="color:red;"><b>*</b></span></label>
                                <textarea asp-for="@Model.PublishOnWebsite" type="text" class="input-with-feedback form-control" data-fieldtype="Small Text" autofocus="autofocus" placeholder="PublishOnWebsite" style="height: 150px;"></textarea>
                                <span asp-validation-for="PublishOnWebsite"></span>
                            </div>
                        </div>

                    </div>

                    <div class="card-body">

                        <div class="col-lg-2 col-md-2 col-sm-12">
                            <button type="submit" class="btn btn-primary">Save</button>
                        </div>
                    </div>

                </form>

            </div>



        </div>
    </div>

</div>t
<script>
    function onEmployeefiltering(e) {
        var query = new ej.data.Query();
        query = (e.text !== '') ? query.where('FullName', 'startswith', e.text, true) : query;
        e.updateData(@Html.Raw(JsonConvert.SerializeObject(ViewBag.Employee)), query);
    }
</script>
<script>
    function onRecruitClientContactfiltering(e) {
        var query = new ej.data.Query();
        query = (e.text !== '') ? query.where('ContactName', 'startswith', e.text, true) : query;
        e.updateData(@Html.Raw(JsonConvert.SerializeObject(ViewBag.RecruitClientContact)), query);
    }
</script>

<script>
    function onRecruitClientfiltering(e) {
        var query = new ej.data.Query();
        query = (e.text !== '') ? query.where('ClientName', 'startswith', e.text, true) : query;
        e.updateData(@Html.Raw(JsonConvert.SerializeObject(ViewBag.RecruitClient)), query);
    }
</script>
<script>
    $(document).ready(function () {
        
        if ($('#RevenuePerPosition').val() !== '') {
            $('#NumberofPositions').prop('readonly', true);
        }

       
        $('#RevenuePerPosition').on('input', function () {
           
            if ($(this).val() !== '') {
                $('#NumberofPositions').prop('readonly', true);
            } else {
                $('#NumberofPositions').prop('readonly', false);
            }
        });
    });
</script>

