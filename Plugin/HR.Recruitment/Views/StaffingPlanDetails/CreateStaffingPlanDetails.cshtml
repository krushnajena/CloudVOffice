@model CloudVOffice.Data.DTO.Recruitment.StaffingPlanDetailsDTO;
@using System.Collections;
@using Newtonsoft.Json;
@{
	Layout = "_MainAppLayout";
	var DesignationList = new SelectList((IEnumerable)ViewBag.Designation, "DesignationId", "DesignationName");
}
@addTagHelper *, Syncfusion.EJ2
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


<header class="main-heading">
	<div class="container-fluid">
		<div class="row">
			<div class="col-xl-8 col-lg-8 col-md-8 col-sm-8">
				<div class="page-icon">
					<i class="icon-laptop_windows"></i>
				</div>
				<div class="page-title">
					<h5>HR Dashboard</h5>
					<h6 class="sub-heading">Welcome to Unify Admin Template</h6>
				</div>
			</div>
			<div class="col-xl-4 col-lg-4 col-md-4 col-sm-4">
				<div class="right-actions">
					<span class="last-login">Last Login: 2 hours ago</span>
				</div>
			</div>
		</div>
	</div>
</header>


<div class="main-content">
	<div class="row gutters">
		<div class="col-xl-12 col-lg-12 col-md-12 col-sm-12">

			<div class="card">
				<form asp-route="/Recruitment/StaffingPlanDetails/CreateStaffingPlanDetails" method="post" autocomplete="off">
					<div asp-
						 ation-summary="ModelOnly" class="message-error"></div>


					<div class="card-header"><b>Basic Info</b></div>
					<div class="card-body">
						<div class="form-row">

							<div class="form-group col-md-5">
								<input asp-for="@Model.StaffingPlanDetailsId" type="hidden" />

								<label for="DesignationId" class="form-label">Designation</label>
								<ejs-dropdownlist id="DesignationId" allowFiltering="true" ejs-for="@Model.DesignationId" filtering="onDesignationrfiltering" dataSource="@(new SelectList((IEnumerable)ViewBag.Designation, "DesignationId", "DesignationName").Items)" placeholder="Select Designation" popupHeight="220px">
									<e-dropdownlist-fields text="DesignationName" value="DesignationId"></e-dropdownlist-fields>
								</ejs-dropdownlist>

								<span asp-validation-for="DesignationId"></span>
							</div>

						</div>

						<div class="form-row">
							<div class="form-group col-md-5">
								<label for="NoOfVacancies" class="form-label">No Of Vacancies</label>
								<input asp-for="@Model.NoOfVacancies" type="text" class="form-control" autofocus="autofocus" placeholder="No Of Vacancies" />
								<span asp-validation-for="NoOfVacancies"></span>
							</div>

							<div class="form-group col-md-5">
								<label for="EstimatedCostPerPosition" class="form-label">Estimated CostPer Position</label>
								<input asp-for="@Model.EstimatedCostPerPosition" type="text" class="form-control" autofocus="autofocus" placeholder="Estimated Cost Per Position" />
								<span asp-validation-for="EstimatedCostPerPosition"></span>
							</div>

						</div>

					</div>

					<div class="card-body">

						<div class="col-lg-2 col-md-2 col-sm-12">
							<button type="submit" class="btn btn-primary">Save</button>
						</div>
					</div>

				</form>

			</div>



		</div>
	</div>

</div>

<script>
	function onDesignationrfiltering(e) {
		var query = new ej.data.Query();
		query = (e.text !== '') ? query.where('DesignationName', 'startswith', e.text, true) : query;
		e.updateData(@Html.Raw(JsonConvert.SerializeObject(ViewBag.Designation)), query);
	}
</script>