@model CloudVOffice.Core.Domain.Recruitment.JobOpening;
@{
    Layout = "_MainAppLayout";
    ViewData["Title"] = "Job Opening Details";
}
@addTagHelper *, Syncfusion.EJ2
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


<header class="main-heading">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-8 col-lg-8 col-md-8 col-sm-8">
                <div class="page-icon">
                    <i class="icon-laptop_windows"></i>
                </div>
                <div class="page-title">
                    <h5>Job Opening Details</h5>
                    <h6 class="sub-heading"></h6>
                </div>
            </div>
            <div class="col-xl-4 col-lg-4 col-md-4 col-sm-4">
                <div class="right-actions">
                    <span class="last-login"></span>
                </div>
            </div>
        </div>
    </div>
</header>




<div class="main-content">
    <div class="row gutters">
        <div class="col-xl-2 col-lg-2 col-md-2 col-sm-12">
            <div class="card">
            </div>
        </div>
        <div class="col-xl-10 col-lg-10 col-md-10 col-sm-12">
            <div>
                <div class="row gutters">
                    <div class="col-xl-2 col-lg-2 col-md-2 col-sm-2">
                        <div class="card top-blue-bdr">
                            <div class="card-body">
                                <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-2 col-lg-2 col-md-2 col-sm-2">
                        <div class="card top-grey-bdr text-center">
                            <div class="card-body">
                                <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-2 col-lg-2 col-md-2 col-sm-2">
                        <div class="card top-red-bdr text-right">
                            <div class="card-body">
                                <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
                            </div>
                        </div>
                    </div>

                    <div class="col-xl-2 col-lg-2 col-md-2 col-sm-2">
                        <div class="card top-blue-bdr">
                            <div class="card-body">
                                <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-2 col-lg-2 col-md-2 col-sm-2">
                        <div class="card top-grey-bdr text-center">
                            <div class="card-body">
                                <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-2 col-lg-2 col-md-2 col-sm-2">
                        <div class="card top-red-bdr text-right">
                            <div class="card-body">
                                <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
                            </div>
                        </div>
                    </div>
                </div>


            </div>
            <div class="card">
                <div class="card-header"><b>Business Card</b></div>
                <div class="card-body">
                </div>
            </div>

            <div class="card">
                <div class="card-header"><b>Job Opening Information</b></div>
                <div class="card-body">
                    <div class="form-group row gutters">
                        <label for="inputEmail3" class="col-sm-2 col-form-label">Email</label>
                        <div class="col-sm-4">
                            <b>@Model.JobTitle</b>
                        </div>
                        @{
                            if (Model.ClientID != null)
                            {
                                <label for="inputEmail3" class="col-sm-2 col-form-label">Client Name</label>
                                <div class="col-sm-4">
                                    <b>@Model.RecruitClient.ClientName</b>
                                </div>
                            }
                        }

                    </div>


                    <div class="form-group row gutters">

                        @{
                            if (Model.ContactId != null)
                            {
                                <label for="inputEmail3" class="col-sm-2 col-form-label">Contact Name</label>
                                <div class="col-sm-4">
                                    <b>@Model.RecruitClientContact.ContactName</b>
                                </div>
                            }
                        }
                        @{
                            if (Model.ContactId != null)
                            {
                                <label for="inputEmail3" class="col-sm-2 col-form-label">Client Contact</label>
                                <div class="col-sm-4">
                                    <b>@Model.RecruitClientContact.ContactEmail</b>
                                    <b>, @Model.RecruitClientContact.ContactPhone</b>
                                </div>
                            }
                        }

                    </div>


                    <div class="form-group row gutters">
                        <label for="inputEmail3" class="col-sm-2 col-form-label">Hiring Manager</label>
                        <div class="col-sm-4">
                            <b>@Model.Employee.FullName.ToString() (@Model.Employee.EmployeeCode.ToString())</b>
                        </div>

                        <label for="inputEmail3" class="col-sm-2 col-form-label">Assigned Recruiter(s)</label>
                        <div class="col-sm-4">


                            @{
                                var tags = Model.JobOpeningTags.ToList();
                                for (int i = 0; i < @tags.Count; i++)
                                {
                                    <b>  @tags[i].Employee.FullName.ToString(),</b>
                                }


                            }




                        </div>

                    </div>


                    <div class="form-group row gutters">
                        <label for="inputEmail3" class="col-sm-2 col-form-label">Target Date</label>
                        <div class="col-sm-4">
                            <b>@DateTime.Parse(Model.TargetDate.ToString()).ToString("dd-MMM-yyyy")</b>
                        </div>

                        <label for="inputEmail3" class="col-sm-2 col-form-label">Date Opened</label>
                        <div class="col-sm-4">
                            <b>@DateTime.Parse(Model.DateOpened.ToString()).ToString("dd-MMM-yyyy")</b>
                        </div>

                    </div>

                    <div class="form-group row gutters">
                        <label for="inputEmail3" class="col-sm-2 col-form-label">Job Type</label>
                        <div class="col-sm-4">
                            <b>@Model.JobType</b>
                        </div>

                        <label for="inputEmail3" class="col-sm-2 col-form-label">Work Experience</label>
                        <div class="col-sm-4">
                            <b>@Model.WorkExperience</b>
                        </div>

                    </div>


                    <div class="form-group row gutters">
                        <label for="inputEmail3" class="col-sm-2 col-form-label">City</label>
                        <div class="col-sm-4">
                            <b>@Model.City</b>
                        </div>

                        <label for="inputEmail3" class="col-sm-2 col-form-label">Required Skills</label>
                        <div class="col-sm-4">

                            @{
                                var skill = Model.JobOpeningSkills.ToList();
                                for (int i = 0; i < @skill.Count; i++)
                                {
                                    <b>  @skill[i].SkillSet.SkillName.ToString(),</b>
                                }


                            }


                        </div>

                    </div>
                </div>
            </div>

            <div class="card">
                <div class="card-header"><b>Job Applications</b></div>
                <div class="card-body">
                </div>
            </div>
            <div class="card">
                <div class="card-header"><b>Interviews</b></div>
                <div class="card-body">
                </div>
            </div>
        </div>
    </div>
</div>
