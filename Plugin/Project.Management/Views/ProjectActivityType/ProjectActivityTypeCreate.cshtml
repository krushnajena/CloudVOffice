@model CloudVOffice.Data.DTO.Projects.ProjectActivityTypeDTO;
@{
    Layout = "_MainAppLayout";
}
@addTagHelper *, Syncfusion.EJ2
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<header class="main-heading">
	<div class="container-fluid">
		<div class="row">
			<div class="col-xl-8 col-lg-8 col-md-8 col-sm-8">
				<div class="page-icon">
					<i class="icon-laptop_windows"></i>
				</div>
				<div class="page-title">
					<h5>Project Activity Type</h5>
					@*<h6 class="sub-heading">Welcome to Unify Admin Template</h6>*@
				</div>
			</div>
			<div class="col-xl-4 col-lg-4 col-md-4 col-sm-4">
				<div class="right-actions">
					<span class="last-login">Last Login: 2 hours ago</span>
				</div>
			</div>
		</div>
	</div>
</header>
<div class="main-content">
	<div class="row gutters">
		<div class="col-xl-12 col-lg-12 col-md-12 col-sm-12">

			<div class="card">
				<form asp-route="Projects/ProjectActivityType/ProjectActivityTypeCreate" method="post" autocomplete="off">
					<div asp-validation-summary="ModelOnly" class="message-error"></div>


					<div class="card-header"><b> New Project Activity Type</b></div>
					<div class="card-body">
						<div class="form-row">
							<div class="form-group col-md-3">
								<input asp-for="@Model.ProjectActivityTypeId" type="hidden" />

								<label for="ProjectName" class="form-label">Project Activity Name</label>
								<input asp-for="@Model.ProjectActivityName" type="text" class="form-control" autofocus="autofocus" placeholder="ProjectActivityName" />
								<span asp-validation-for="ProjectActivityName"></span>
							</div>

						
								<div class="form-group col-md-3">
									<label for="ActivityCategory" class="form-label">Activity Category</label>
									<select asp-for="@Model.ActivityCategory" class="form-control">
										<option value="">--Select--</option>
										<option vlaue="Project Work">Project Work</option>
										<option vlaue="Counselling /Discussion">Counselling /Discussion</option>
										<option vlaue="Documentation/Report/Policy/SOP/MIS">Documentation/Report/Policy/SOP/MIS</option>


										<option value="Event Management & Participation">Event Management & Participation</option>
										<option value="Imaginar">Imaginar</option>
										<option value="Interviews">Interviews</option>

										<option value="Project & Process Audit">Project & Process Audit</option>
										<option value="Review & Monitor/Report Analysis/Meetings">Review & Monitor/Report Analysis/Meetings</option>
										<option value="RFP Response">RFP Response</option>


										<option value="R&D">R&D</option>
										<option value="Project (CSR)">Project (CSR)</option>
										<option value="Project (Product)">Project (Product)</option>

										<option value="Townhall">Townhall</option>
										<option value="Quality Review">Quality Review</option>
										<option value="Performance Assessment">Performance Assessment</option>

										<option value="Induction/knowledge sharing">Induction/knowledge sharing</option>
										<option value="Training & Capacity Building">Training & Capacity Building</option>
										<option value="Annual function">Annual function</option>


										<option value="Meetings & Reviews">Meetings & Reviews</option>
										<option value="Travel for office Tour">Travel for office Tour</option>
									</select>
									<span asp-validation-for="TimesheetActivityType"></span>
								</div>
							
						</div>
					</div>

					<div class="card-body">

						<div class="col-lg-2 col-md-2 col-sm-12">
							<button type="submit" class="btn btn-primary">Save</button>
						</div>
					</div>

				</form>

			</div>



		</div>
	</div>

</div>