@model CloudVOffice.Data.DTO.Projects.ProjectActivityTypeDTO;
@using System.Collections;
@using Newtonsoft.Json;
@{
	Layout = "_MainAppLayout";

}
@addTagHelper *, Syncfusion.EJ2
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<header class="main-heading">
	<div class="container-fluid">
		<div class="row">
			<div class="col-xl-8 col-lg-8 col-md-8 col-sm-8">
				<div class="page-icon">
					<i class="icon-laptop_windows"></i>
				</div>
				<div class="page-title">
					<h5>Project Activity Type</h5>
					@*<h6 class="sub-heading">Welcome to Unify Admin Template</h6>*@
				</div>
			</div>
			<div class="col-xl-4 col-lg-4 col-md-4 col-sm-4">
				<div class="right-actions">
					<span class="last-login">Last Login: 2 hours ago</span>
				</div>
			</div>
		</div>
	</div>
</header>
<div class="main-content">
	<div class="row gutters">
		<div class="col-xl-12 col-lg-12 col-md-12 col-sm-12">

			<div class="card">
				<form asp-route="Projects/ProjectActivityType/ProjectActivityTypeCreate" method="post" autocomplete="off">
					<div asp-validation-summary="ModelOnly" class="message-error"></div>


					<div class="card-header"><b> New Project Activity Type</b></div>
					<div class="card-body">
						<div class="form-row">
							<div class="form-group col-md-3">
								<input asp-for="@Model.ProjectActivityTypeId" type="hidden" />

								<label for="ProjectName" class="form-label">Project Activity Name&nbsp;<span style="color:red;"><b>*</b></span></label>
								<input asp-for="@Model.ProjectActivityName" type="text" class="form-control" autofocus="autofocus" placeholder="Project Activity Name" />
								<span asp-validation-for="ProjectActivityName"></span>
							</div>


							<div class="form-group col-md-3">
								<label for="ActivityCategory" class="form-label">Activity Category</label>

								<ejs-dropdownlist id="ProjectId" allowFiltering="true" ejs-for="@Model.ActivityCategory" filtering="onActivityCategoryfiltering" dataSource="@(new SelectList((IEnumerable)ViewBag.ActivityCategory, "TimesheetActivityCategoryId", "TimesheetActivityCategoryName").Items)" placeholder="Select a Activity Category" popupHeight="220px">
									<e-dropdownlist-fields text="TimesheetActivityCategoryName" value="TimesheetActivityCategoryId"></e-dropdownlist-fields>
								</ejs-dropdownlist>
							
								<span asp-validation-for="ActivityCategory"></span>
							</div>

						</div>
					</div>

					<div class="card-body">

						<div class="col-lg-2 col-md-2 col-sm-12">
							<button type="submit" class="btn btn-primary">Save</button>
						</div>
					</div>

				</form>

			</div>



		</div>
	</div>

</div>

<script>
	function onActivityCategoryfiltering(e) {
		var query = new ej.data.Query();
		query = (e.text !== '') ? query.where('TimesheetActivityCategoryName', 'startswith', e.text, true) : query;
		e.updateData(@Html.Raw(JsonConvert.SerializeObject(ViewBag.ActivityCategory)), query);
	}
</script>
