	</ul>

</div>

<script>
	loadEmployeeDetails();
	function loadEmployeeDetails() {
		
		$.ajax({
			type: "GET",
			url: "/Hr/Employee/GetEmployeeDetailsByEmployeeId?EmployeeId=" + @Model,


			success: function (data, statusText, xhr) {
				console.log(data);
				$('#Name').html(data['fullName'])
				$('#Department').html(data['department']['departmentName'])
				$('#Degnation').html(data['designation']['designationName'])
				$("#image").attr("src", '/uploads/employee/' + data['photo']);
			},

		})


	}
</script>

